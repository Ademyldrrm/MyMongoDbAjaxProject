@model MyMongoDbAjaxProject.DAL.Entities.Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Güncellmee</h1>

<form method="post">
    <label>Kategori Id</label>
    <br />
    <input type="text" asp-for="CategoryID" class="form-control" />
    <label>Kategori Adı</label>
    <br />
    <input type="text" asp-for="CategoryName" class="form-control" />
    <br />
    <button class="btn btn-primary">Kategoriyi Güncelle</button>

   
</form>